<page layout="admin-2columns-left" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <body>
        <referenceContainer name="left">
            <block class="Scandi\Menumanager\Block\Adminhtml\Menu\Edit\Tabs" name="scandi_menumanager_menu_edit_tabs">
                <block class="Scandi\Menumanager\Block\Adminhtml\Menu\Edit\Tab\General" name="scandi_menumanager_menu_edit_tab_general"/>

                <block class="Scandi\Menumanager\Block\Adminhtml\Menu\Edit\Tab\Item" name="scandi_menumanager_menu_edit_tab_item" template="Scandi_Menumanager::edit/tab/item.phtml">
                    <block class="Scandi\Menumanager\Block\Adminhtml\Item\Grid" name="scandi_menumanager_item_grid"/>
                    <block class="Magento\Backend\Block\Widget\Button" name="scandi_menumanager.add_items_button" as="add_items_button">
                        <arguments>
                            <argument name="id" xsi:type="string">scandi_menumanager_add_item</argument>
                            <argument name="label" translate="true" xsi:type="string">Add Item</argument>
                            <argument name="class" xsi:type="string">secondary edit-menu-item</argument>
                            <argument name="onclick" xsi:type="string">jQuery('#add-new-item').click(); return false;</argument>
                        </arguments>
                    </block>
                </block>

                <block class="Magento\Backend\Block\Widget\Grid\Serializer" name="related_grid_serializer">
                    <arguments>
                        <argument name="input_names" xsi:type="string">position</argument>
                        <argument name="grid_block" xsi:type="string">scandi_menumanager_item_grid</argument>
                        <argument name="callback" xsi:type="string">getAssignedItems</argument>
                        <argument name="input_element_name" xsi:type="string">items[assigned]</argument>
                        <argument name="reload_param_name" xsi:type="string">items_assigned</argument>
                    </arguments>
                </block>
                <action method="addTab">
                    <argument name="name" xsi:type="string">general_section</argument>
                    <argument name="block" xsi:type="string">scandi_menumanager_menu_edit_tab_general</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">item_section</argument>
                    <argument name="block" xsi:type="string">scandi_menumanager_menu_edit_tab_item</argument>
                </action>
            </block>
        </referenceContainer>

        <referenceContainer name="content">
            <block class="Scandi\Menumanager\Block\Adminhtml\Menu\Edit" name="scandi_menumanager_menu_edit"/>
        </referenceContainer>
    </body>
</page>
